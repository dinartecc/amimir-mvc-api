
@{
    ViewBag.Title = "Autenticarse";
}

<p>@ViewBag.Message</p>

@if (ViewBag.IsLoggedIn == null || !ViewBag.IsLoggedIn)
{
    using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="absolute top-0 w-full h-full bg-gray-900" style="background-image: url(&quot;https://demos.creative-tim.com/tailwindcss-starter-project/static/media/register_bg_2.2fee0b50.png&quot;); background-size: 100%; background-repeat: no-repeat;"></div>
        <div class="container mx-auto px-4 h-full">
            <div class="flex content-center items-center justify-center h-full">
                <div class="w-full lg:w-4/12 px-4 pt-32">
                    <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0">
                        <div class="rounded-t mb-0 px-6 py-6">
                            <div class="flex justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                                    <path d="M20 12h-13l3 -3m0 6l-3 -3" />
                                </svg>
                            </div>

                            <div class="text-center mb-3">



                                <h6 class="text-gray-600 text-sm font-bold">Sign in </h6>
                            </div>

                            <hr class="mt-6 border-b-1 border-gray-400">
                        </div>
                        <div class="flex-auto px-4 lg:px-10 py-10 pt-0">

                            <form>
                                <div class="relative w-full mb-3">
                                    <label class="block uppercase text-gray-700 text-xs font-bold mb-2" for="grid-password">Username</label>
                                    <input class="px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full" name="Username" id="username" type="text" placeholder="Username" style="transition: all 0.15s ease 0s;">
                                </div>
                                <div class="relative w-full mb-3">
                                    <label class="block uppercase text-gray-700 text-xs font-bold mb-2" for="grid-password">Password</label>
                                    <input class="px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full" id="password" name="Contrasena" type="password" placeholder="******************" style="transition: all 0.15s ease 0s;">
                                </div>
                                <div>

                                </div>
                                <div class="text-center mt-6">
                                    <button class="bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full" type="submit" value="Create" style="transition: all 0.15s ease 0s;">Sign In</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
                    }
                    }
                    else
                    {
                    using (Html.BeginForm("Logout", "Authentication", FormMethod.Post))
                    {
                    @Html.AntiForgeryToken()
                    <h3>Usuario</h3>
                    <p>@ViewBag.Username</p>
                    <input type="submit" value="Cerrar Sesión" class="bg-blue-500 hover:bg-blue-dark-500 text-white font-bold py-2 px-4 rounded" />
                    }

                    }

