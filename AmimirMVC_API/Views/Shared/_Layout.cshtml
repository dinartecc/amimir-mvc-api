<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Amimir</title>
    @Styles.Render("~/Content/tailwind.min.css")
    @Styles.Render("~/Content/datepicker.min.css")
    @Styles.Render("~/Content/ExtendDataTable.css")
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/Scripts/datepicker.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
</head>
<body>

    <div class="flex flex-col" style="min-height: 100vh">
        <div class="relative bg-white">
            <div class="px-4 sm:px-6 border-b-2 border-gray-100">
                <div class="max-w-7xl mx-auto flex justify-between items-center  py-6 md:justify-start md:space-x-10">
                    <div class="flex justify-start lg:w-0 lg:flex-1">
                        <a href="#">
                            <span class="sr-only">Workflow</span>
                            <img class="h-8 w-auto sm:h-10" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="">
                        </a>
                    </div>
                    <div class="-mr-2 -my-2 md:hidden">
                        <button type="button" class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
                            <span class="sr-only">Open menu</span>
                            <!-- Heroicon name: menu -->
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                    <nav class="hidden md:flex space-x-10">
                        @Html.ActionLink("Animes", "Index", "Anime", null, new { @class = "text-base font-medium text-gray-500 hover:text-gray-900" })
                        @Html.ActionLink("Estudios", "Index", "Estudio", null, new { @class = "text-base font-medium text-gray-500 hover:text-gray-900" })
                        @Html.ActionLink("Actores", "Index", "Actor", null, new { @class = "text-base font-medium text-gray-500 hover:text-gray-900" })
                    </nav>
                    <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
                        @if (ViewBag.IsAdmin != null && ViewBag.IsAdmin)
                        {
                            Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900" });
                        }
                        @Html.ActionLink("Autenticación", "Index", "Authentication", null, new { @class = "ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700" })
                    </div>
                </div>
            </div>







        </div>
        <div class="flex flex-col flex-1">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>